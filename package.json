{
  "name": "jlbun",
  "version": "0.1.0",
  "module": "index.ts",
  "license": "MIT",
  "description": "Using Julia in Bun",
  "keywords": [
    "julia",
    "ffi"
  ],
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "c/wrapper.c",
    "cmake/FindJulia.cmake",
    "CMakeLists.txt"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "install": "bun build-lib",
    "build-lib": "rimraf ./build && mkdirp build && cd build && cmake -DCMAKE_BUILD_TYPE=Release .. && make",
    "typedoc": "typedoc --tsconfig tsconfig.typedoc.json",
    "fmt": "prettier --write './**/*.{ts,tsx,cjs,js,jsx,json}'",
    "lint": "eslint '**/*.{js,ts,json}' '*.{js,ts,cjs}' --fix",
    "lint-staged": "lint-staged",
    "prepare": "bun run husky",
    "prepublishOnly": "bun run rollup -c rollup.config.js",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "lint-staged": {
    "*.{ts,tsx,cjs,js,jsx,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "rimraf": "^6.1.2",
    "mkdirp": "^3.0.1"
  },
  "devDependencies": {
    "@thi.ng/bench": "^3.6.36",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "bun-types": "^1.3.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-katex": "^0.1.2",
    "typescript": "^5.9.3"
  }
}
